{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noUnusedTemplateLiteral": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"jsxQuoteStyle": "single"
		}
	},
	"overrides": [
		{
			"include": [".vscode/**"],
			"json": {
				"parser": {
					"allowComments": true,
					"allowTrailingCommas": true
				}
			}
		}
	],
	"files": {
		"ignore": [
			"e2e/user.json",
			"*.ico",
			"*.jpg",
			"src/route-tree.gen.ts",
			"migrations/",
			"dist/",
			"coverage/"
		]
	}
}
